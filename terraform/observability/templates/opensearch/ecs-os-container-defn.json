[
    {
        "name": "${NAME}",
        "image": "${IMAGE}",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 9200
            },
            {
                "containerPort": 9600
            }
        ],
        "environment": [
            {
                "name": "discovery.type",
                "value": "single-node"
            },
            {
                "name": "bootstrap.memory_lock",
                "value": "true"
            },
            {
                "name": "plugins.security.disabled",
                "value": "false"
            }
        ],
        "secrets": [
            {
                "name": "OPENSEARCH_INITIAL_ADMIN_PASSWORD",
                "valueFrom": "${ADMIN_PSWD_ARN}"
            }
        ],
        "mountPoints": [
            {
                "sourceVolume": "opensearch-data",
                "containerPath": "/usr/share/opensearch/data",
                "readOnly": false
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${LOG_GROUP}",
                "awslogs-region": "${REGION}",
                "awslogs-stream-prefix": "${STREAM_PREFIX}"
            }
        }
    }
]